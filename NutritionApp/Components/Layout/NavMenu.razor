@rendermode InteractiveServer

<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon">
        <FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" />
    </label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Collapsible="true" Width="250" Title="Navigation menu" @bind-Expanded="expanded"
            CustomToggle="true">
            <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())">
                首頁
            </FluentNavLink>
            <FluentNavGroup Title="食品資料" Icon="@(new Icons.Regular.Size20.Document())">
                <FluentNavLink Href="/samples/list" Icon="@(new Icons.Regular.Size20.FoodGrains())">
                    食品營養成分查詢
                </FluentNavLink>
                <FluentNavLink Href="/samples/compare" Icon="@(new Icons.Regular.Size20.LayoutColumnTwo())">
                    食品營養成分比較
                </FluentNavLink>
                <FluentNavLink Href="/samples/document" Icon="@(new Icons.Regular.Size20.Document())">
                    文件
                </FluentNavLink>
            </FluentNavGroup>
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;
}
